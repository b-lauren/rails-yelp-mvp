<h1>All Restaurants</h1>

<h6>Add a new Restaurant</h6>
<%= link_to "Click Here", new_restaurant_path, class: "btn btn-primary"%>


<% @restaurants.each do |restaurant| %>
<ul>
  <li><strong><%= restaurant.name %> </strong></li>
  <p> <%= restaurant.address %></p>
  <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-dark"%>
</ul>
<% end %>
